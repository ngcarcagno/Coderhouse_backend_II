<div class="real-time-container">
  {{> header title="Products Management - Real Time" }}

  <div class="toolbar" style="margin-top:12px;display:flex;align-items:center;justify-content:center;gap:12px">
    <div class="status-indicator">
      <span id="connectionStatus" class="disconnected">‚óè</span>
      <span id="statusText">Connecting...</span>
    </div>
  </div>

  <div id="messages" class="messages"></div>

  <section class="realtime-main" style="max-width:1100px;margin:18px auto;padding:12px">
    <form id="addProductForm" style="display:flex;flex-direction:column;gap:8px;">
      <div style="display:flex;gap:8px;flex-wrap:wrap">
        <input id="brand" placeholder="Marca (brand)" required />
        <input id="model" placeholder="Modelo (model)" required />
        <input id="code" placeholder="Code" required />
        <input id="size" placeholder="Size" required />
        <input id="price" placeholder="Price" type="number" required />
        <input id="stock" placeholder="Stock" type="number" required />
        <input id="category" placeholder="Category" required />
      </div>
      <textarea id="description" placeholder="Description (opcional)"></textarea>
      <div><button type="submit">Add product</button></div>
    </form>

    <div id="productsContainer"></div>
  </section>

  <!-- assets: socket + page scripts/styles -->
  <link rel="stylesheet" href="/static/css/realtimeproducts.css">
  <script src="/socket.io/socket.io.js"></script>
  <script defer src="/static/js/realtimeproducts.js"></script>
</div>
